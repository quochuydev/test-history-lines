generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Order {
  id          Int      @id @default(autoincrement())
  symbol      String
  orderNumber Int
  signal      String // "BUY" | "SELL" | "HOLD"
  position    String? // "OPEN", "CLOSED", etc
  timestamp   DateTime @default(now())
}

model Candle {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @unique
  open      Float
  high      Float
  low       Float
  close     Float
  volume    Float
}

model Signal {
  id         Int      @id @default(autoincrement())
  timestamp  DateTime
  signal     String
  confidence Int
  reason     String
}
